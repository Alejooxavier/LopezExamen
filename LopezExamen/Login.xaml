<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LopezExamen.MainPage">
    <StackLayout Margin="10,10,10,10">
        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"
               HeightRequest="100" />
        <Frame BackgroundColor="#2196F3" Padding="15" CornerRadius="0">
            <Label Text="LOGIN DE USUARIO" HorizontalTextAlignment="Center" TextColor="White" FontSize="15"/>
        </Frame>

        <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
        <Entry x:Name="txtClave" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="btnAbrir" Text="Iniciar Sesión" Clicked="btnAbrir_Clicked">
      

        </Button>

    </StackLayout>

</ContentPage>
